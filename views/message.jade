extends ./layout.jade

block content
    .container.messageCont
        h1.text-center Message Board  
        .message-board
            - each val in messages
                .message
                    img.mess.img-responsive(src= val.image)
                    h3=val.body
                    h5=val.date
        
        // Trigger the modal with a button
        button.btn.btn-success.btn-lg(type='button', data-toggle='modal', data-target='#myModal') Add Contact
        // Modal
        #myModal.modal.fade(role='dialog')
          .modal-dialog
            // Modal content
            .modal-content
              .modal-header
                button.btn-danger.close(type='button', data-dismiss='modal')
                h4.modal-title Send Message
              .modal-body
                form.form(role='form')
                  .row
                    .form-group.col-lg-6
                      label(for='name') Name:
                      input#name.form-control(type='text', placeholder='Contact Name', required='')
                    .form-group.col-lg-6
                      label(for='email') Email:
                      input#email.form-control(type='email', placeholder='Contact email', required='')
                  .row
                    .form-group.col-lg-12
                      label(for='conimage') Image
                      input#image.form-control(type='url', placeholder='contact url')
                  .row
                    .form-group.col-lg-12
                      label(for='message') Message
                      input#image.form-control(type='textarea', placeholder='Write you message here')
                  .row
                    .form-group.col-lg-6
                      button#save.save.btn-primary.btn-lg(type='submit') Post
              .modal-footer
                button.btn.btn-danger(type='button', data-dismiss='modal') Close
        // Modal
